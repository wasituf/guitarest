---
interface Props {
  message: string
}

const { message } = Astro.props
---

<button
  id="help"
  class="group absolute bottom-4 right-4 z-20 flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border-2 border-white/80 p-2 pt-2.5 transition duration-300 hover:border-white"
>
  <span class="text-2xl font-semibold transition duration-300">?</span>
</button>
<p
  id="help-text"
  class="absolute bottom-16 w-screen cursor-pointer text-center text-white/80 opacity-0 transition duration-700 group-hover:text-white lg:bottom-6 lg:right-[70px] lg:w-[36ch]"
  set:html={message}
/>

<script>
  const helpUI = document.getElementById('help')
  helpUI?.addEventListener('click', () => {
    const helpSignUI = document.querySelector('#help>span')
    const helpTextUI = document.getElementById('help-text')

    helpUI?.classList.toggle('bg-white')
    helpSignUI?.classList.toggle('text-black')
    helpTextUI?.classList.toggle('opacity-0')
  })
</script>
